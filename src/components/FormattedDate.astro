---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
        {/**
         * date.toLocaleDateString('en-us', {
         *         year: 'numeric',
         *         month: 'short',
         *         day: 'numeric',
         * })
         */}
        {
                date.toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                })
        }
</time>
